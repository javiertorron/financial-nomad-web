# =============================================================================
# VARIABLES DE ENTORNO - PLANTILLA
# =============================================================================
# Copia este archivo como .env y configura tus valores reales
# cp .env.example .env

# Google OAuth Configuration (obtener de Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Security (generar valores seguros)
SECRET_KEY=your-secure-secret-key-for-jwt-tokens
JWT_ALGORITHM=HS256
SESSION_EXPIRE_HOURS=24

# Database
FIRESTORE_PROJECT_ID=your-firestore-project-id
FIRESTORE_DATABASE=default
USE_FIRESTORE_EMULATOR=true
FIRESTORE_EMULATOR_HOST=firestore-emulator:8081

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:4200,http://localhost:80,http://127.0.0.1:4200
RATE_LIMIT_PER_MINUTE=1000

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Server
HOST=0.0.0.0
PORT=8080
WORKERS=1

# Frontend
NODE_ENV=development
CHOKIDAR_USEPOLLING=true
API_URL=http://localhost:8080/api/v1