# Application settings
APP_NAME=financial-nomad-api
VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Database
FIRESTORE_PROJECT_ID=your-firestore-project-id
FIRESTORE_DATABASE=(default)
USE_FIRESTORE_EMULATOR=true

# API
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:4200"]
RATE_LIMIT_PER_MINUTE=100

# External APIs (Optional - for future integrations)
# ASANA_CLIENT_ID=your-asana-client-id
# ASANA_CLIENT_SECRET=your-asana-client-secret

# Session
SESSION_EXPIRE_HOURS=24

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=

# Development only
FIRESTORE_EMULATOR_HOST=localhost:8080