# Dockerfile para desarrollo Backend FastAPI
FROM python:3.11-slim

# Instalar dependencias del sistema para desarrollo
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    git \
    vim \
    htop \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Crear usuario no-root para seguridad
RUN groupadd -r appuser && useradd -r -g appuser appuser

# Copiar requirements primero para cache de layers
COPY requirements*.txt ./

# Instalar dependencias Python
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-dev.txt

# Instalar herramientas adicionales de desarrollo
RUN pip install --no-cache-dir \
    ipython \
    ipdb \
    python-dotenv

# Copiar c√≥digo fuente
COPY --chown=appuser:appuser . .

# Crear directorios necesarios
RUN mkdir -p logs .pytest_cache && \
    chown -R appuser:appuser logs .pytest_cache

# Cambiar a usuario no-root
USER appuser

# Exponer puerto
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=45s --retries=3 \
  CMD curl -f http://localhost:8080/api/v1/health || exit 1

# Comando para desarrollo con hot reload
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8080", "--reload", "--reload-dir", "src", "--log-level", "debug"]